    <link rel="stylesheet" href="style/style.css" type="text/css">
</head>

<body>
    <div class="container">
      
        <%- include ("../partials/head") -%> 
        <% if (datas==="searchData") { %>
          <% for( let index = 0; index < searchData.length; index++ ) { %>
            <div class="card me-5 mb-3" style="width: 18rem;">
              <img src=<%= searchData[index].Src%>  class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= searchData[index].Name  %> </h5>
                <ul>
                    <li class="shoes">رنگ: <span class="ms-5"><%=searchData[index].Color  %></span>  </li>
                    <li class="shoes">سایز: <span class="ms-5"><%=searchData[index].Size  %></span></li>
                    <li class="shoes">جنس: <span class="ms-5"><%=searchData[index].Material  %></span></li>
                </ul>
                <a href=<%=  searchData[index].Href  %> class="btn btn-primary me-5"> خرید</a> <span class="price"><%= searchData[index].Price  %> </span>
              </div>
            </div>
          
          <% } %>
         
       
        <% } else { %>
         
       
       

        <% for( let index = 0; index < data.length; index++ ) { %>
            <% if (index===0 ||index=== 3) { %>
                <div class="card me-5 mb-3" style="width: 18rem;">
                    <img src=<%= data[index].Src%>  class="card-img-top" alt="...">
